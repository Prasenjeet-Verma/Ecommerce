<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Products | <%-admin.username%></title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin-product.css">

</head>

<body>
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

  <header class="mobile-header">
    <span style="font-weight: 800; font-size: 1.2rem"><%-admin.username%></span>
    <i class="fa-solid fa-bars" style="font-size: 1.5rem; cursor: pointer" onclick="toggleSidebar()"></i>
  </header>

  <aside class="sidebar" id="sidebar">
    <div style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 2rem;
        ">
      <h2><i class="fa-solid fa-bolt"></i><%-admin.username%></h2>
      <i class="fa-solid fa-xmark" class="hide-desktop" style="cursor: pointer; font-size: 1.5rem; display: none"
        onclick="toggleSidebar()" id="closeSidebar"></i>
    </div>
    <nav>
      <a href="/admin-home" class="nav-link"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
      <a href="/admin-userlist" class="nav-link"><i class="fa-solid fa-users"></i> My Users</a>
      <a href="/admin-howmanyshoesuploaded" class="nav-link active" style="background-color: black;"><i
          class="fa-solid fa-shoe-prints"></i> Add Shoes</a>
      <a href="/admin-howmanyglassesuploaded" class="nav-link active"><i class="fa-solid fa-glasses"></i></i> Add
        Glasses</a>
      <a href="/admin-howmanywatchesuploaded" class="nav-link active"><i class="fa-solid fa-stopwatch"></i> Add Watches</a>
      <a href="/admin-howmanyclothesuploaded" class="nav-link active"><i class="fa-solid fa-shirt"></i> Add Clothes</a>
      <a href="admin-newoder.html" class="nav-link"><i class="fa-solid fa-cart-shopping"></i> New Orders</a>
      <a href="admin.order-history.html" class="nav-link"><i class="fa-solid fa-cart-shopping"></i> Orders History</a>

      <a href="/logout" class="nav-link"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>

    </nav>
  </aside>

  <main class="main-content">
    <header style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          flex-wrap: wrap;
          gap: 10px;
        ">

      <h1>Products</h1>

      <div class="select-wrapper">
        <select id="Display" onchange="filterShoes(this.value)">
          <option value="all" <%=selectedFilter==='all' ? 'selected' : '' %>>
            All
          </option>
          <option value="show" <%=selectedFilter==='show' ? 'selected' : '' %>>
            Show
          </option>
          <option value="hide" <%=selectedFilter==='hide' ? 'selected' : '' %>>
            Hide
          </option>
        </select>
      </div>




      <button class="btn-add" onclick="openModal('addModal')">
        + Add New Shoes
      </button>
    </header>

    <div class="product-grid">
      <% products.forEach(product=> { %>
        <div class="product-card">
          <img src="<%= product.images[0] %>" class="product-img" />

          <div class="product-info">
            <h3 class="shoe-name">
              <%= product.title %>
            </h3>

            <p class="shoe-price">â‚¹<%= product.price %>
            </p>

            <% if(product.offerPercentage> 0){ %>
              <p class="shoe-offer" style="color:red;">
                Offer <%= product.offerPercentage %>%
              </p>
              <p class="shoe-offer-price" style="color:green;">
                Offer Price â‚¹<%= product.offerPrice %>
              </p>
              <% } %>

                <p class="shoe-stock" style="color:red;">
                  Total Stock <%= product.totalStock %>
                </p>

                <p style="color:blue;">
                  <%= product.gender %>
                </p>
                <p style="color:blue;">
                  <%= product.brand %>
                </p>
                <p style="color:blue;">
                  <%= product.sizes.join(", ") %></p>

        <p style=" color:goldenrod;">
                    <%= product.status==="active" ? "Show" : "Hide" %>
                </p>

                <button class="btn-edit" onclick='openEditModal(<%- JSON.stringify(product) %>)'>
                  Edit Product
                </button>
          </div>
        </div>
        <% }) %>
    </div>

  </main>

  <!-- ============================== Add Soes Modal ===================== -->

  <form action="/admin-howmanyshoesuploaded" method="POST" enctype="multipart/form-data">
    <div class="modal-overlay" id="addModal">
      <div class="modal-box">
        <h2>Add New Shoes</h2>

        <div class="form-group">
          <label>Shoes Name</label>
          <input type="text" name="title" required />
        </div>

        <div class="form-group">
          <label>Price (â‚¹)</label>
          <input type="number" name="price" required />
        </div>

        <div class="form-group">
          <label>Offer (%)</label>
          <input type="number" name="offerPercentage" value="0" />
        </div>

        <div class="form-group">
          <label>Total Stock</label>
          <input type="number" name="totalStock" required />
        </div>

        <label>Gender</label>
        <select name="gender" required>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="unisex">Unisex</option>
        </select>

        <label>Brand</label>
        <select name="brand" required>
          <option>ADIDAS</option>
          <option>ASICS</option>
          <option>NB</option>
          <option>PUMA</option>
          <option>REEBOK</option>
          <option>HOKA</option>
        </select>

        <!-- ðŸ”¥ Multiple Images -->
        <div class="form-group">
          <label>Product Images (3â€“4)</label>
          <input type="file" name="images" accept="image/*" multiple required />
          <small style="color:gray">
            Max 4 images â€¢ Each max 2MB
          </small>
        </div>


        <!-- Sizes -->
        <div class="category-box">
          <div>Select Size âœ”</div>

          <label><input type="checkbox" name="sizes" value="6" /> 6</label>
          <label><input type="checkbox" name="sizes" value="7" /> 7</label>
          <label><input type="checkbox" name="sizes" value="8" /> 8</label>
          <label><input type="checkbox" name="sizes" value="9" /> 9</label>
          <label><input type="checkbox" name="sizes" value="10" /> 10</label>
          <label><input type="checkbox" name="sizes" value="11" /> 11</label>
        </div>

        <!-- Hidden -->
        <input type="hidden" name="category" value="shoes" />

        <div class="modal-btns">
          <button type="button" class="btn-main btn-cancel" onclick="closeModal('addModal')">
            Cancel
          </button>
          <button type="submit" class="btn-main btn-save">
            Add Product
          </button>
        </div>
      </div>
    </div>
  </form>
  <!-- ============================== Edit Shoes Modal ===================== -->

  <form action="/admin-editshoesproducts" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="productId" id="editProductId" />

    <div class="modal-overlay" id="editModal">
      <div class="modal-box">
        <h2>Edit Product</h2>

        <div class="form-group">
          <label>Shoe Name</label>
          <input type="text" name="title" id="editName" required />
        </div>

        <div class="form-group">
          <label>Price (â‚¹)</label>
          <input type="number" name="price" id="editPrice" required />
        </div>

        <div class="form-group">
          <label>Offer (%)</label>
          <input type="number" name="offerPercentage" id="editOffer" />
        </div>

        <div class="form-group">
          <label>Total Stock</label>
          <input type="number" name="totalStock" id="editStock" />
        </div>

        <label>Gender</label>
        <select name="gender" id="editGender">
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="unisex">Unisex</option>
        </select>

        <label>Brand</label>
        <select name="brand" id="editBrand">
          <option>ADIDAS</option>
          <option>ASICS</option>
          <option>NB</option>
          <option>PUMA</option>
          <option>REEBOK</option>
          <option>HOKA</option>
        </select>

        <label>Status</label>
        <select name="status" id="editStatus">
          <option value="active">Show</option>
          <option value="inactive">Hide</option>
        </select>

        <!-- ðŸ”¥ EXISTING IMAGES -->
        <div class="form-group">
          <label>Current Images</label>
          <div id="editImagePreview" style="display:flex; gap:10px; flex-wrap:wrap;"></div>
        </div>

        <!-- ðŸ”¥ UPDATE IMAGES -->
        <div class="form-group">
          <label>Replace Images (optional)</label>
          <input type="file" name="images" accept="image/*" multiple />
          <small style="color:gray">Leave empty to keep old images</small>
        </div>

        <!-- Sizes -->
        <div class="category-box">
          <div>Select Size âœ”</div>

          <label><input type="checkbox" name="sizes" value="6" /> 6</label>
          <label><input type="checkbox" name="sizes" value="7" /> 7</label>
          <label><input type="checkbox" name="sizes" value="8" /> 8</label>
          <label><input type="checkbox" name="sizes" value="9" /> 9</label>
          <label><input type="checkbox" name="sizes" value="10" /> 10</label>
          <label><input type="checkbox" name="sizes" value="11" /> 11</label>
        </div>

        <div class="modal-btns">
          <button type="button" class="btn-main btn-cancel" onclick="closeModal('editModal')">
            Cancel
          </button>
          <button type="submit" class="btn-main btn-save">
            Update Changes
          </button>
        </div>
      </div>
    </div>
  </form>

  <script src="/js/product.js"></script>
</body>

</html>