<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rider Shoes</title>

  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/slider.css">
  <link rel="stylesheet" href="/css/userbody.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/whatsapp.css">
  <link rel="stylesheet" href="/css/productstyle.css" />
  <link rel="stylesheet" href="/css/heart.css">
  <link rel="stylesheet" href="/css/sopping.css">

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/heart.js"></script>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            brand: {
              light: '#F3E8FF', /* Very light purple */
              DEFAULT: '#C084FC', /* Medium Purple */
              dark: '#6B21A8', /* Deep Purple for text */
              accent: '#A855F7'
            }
          }
        }
      }
    }
  </script>

</head>

<!-- ========================== Header ============================================-->

<body class="text-gray-800 font-sans">

  <%- include('../partials/userHeader') %>

<div class="container text-center">
  <h1 class="text-3xl font-bold text-green-600">✅ Order Placed!</h1>

  <p>Order ID: <%= order._id %></p>

  <% if(order.product) { %>
    <!-- Buy Now -->
    <img src="<%= order.product.images[0] %>" width="200">
    <h2><%= order.product.title %></h2>
    <p>Qty: <%= order.qty %></p>
  <% } else if(order.items && order.items.length > 0) { %>
    <!-- Cart Order -->
    <% order.items.forEach(item => { %>
      <img src="<%= item.product.images[0] %>" width="200">
      <h2><%= item.product.title %></h2>
      <p>Qty: <%= item.qty %></p>
      <p>Size: <%= item.size || 'N/A' %></p>
      <hr/>
    <% }) %>
  <% } %>

  <p>Total: ₹<%= order.totalAmount %></p>
  <p>Status: <b><%= order.orderStatus %></b></p>
  <p>Payment: <%= order.paymentMethod %> – <%= order.paymentStatus %></p>

  <a href="/" class="btn">Continue Shopping</a>
</div>


</body>
</html>
